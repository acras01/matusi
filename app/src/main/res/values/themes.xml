<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Matusi" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash -->
    <style name="Theme.Matusi.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brand_color_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_matusi</item>
        <item name="postSplashScreenTheme">@style/Theme.Matusi.NoActionBar</item>
    </style>

    <style name="Theme.Matusi.NoActionBar" parent="Theme.Matusi">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Matusi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Matusi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/brand_color_primary</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>